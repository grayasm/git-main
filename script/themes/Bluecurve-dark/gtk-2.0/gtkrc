# Nouveau Bluecurve

style "bluecurve-default"
{
  GtkMenuItem::selected_shadow_type = out
  GtkWidget::interior_focus = 1
  GtkButton::default_border = { 0, 0, 0, 0 }
  GtkButton::default_outside_border = { 0, 0, 0, 0 }
  GtkRange::trough_border = 0

  GtkWidget::focus_padding = 1

  GtkPaned::handle_size = 6

  GtkRange::slider_width = 15
  GtkRange::stepper_size = 15
  GtkScrollbar::min_slider_length = 30
  GtkCheckButton::indicator_size = 12
  GtkMenuBar::internal-padding = 0

  #GtkOptionMenu::indicator_size = { 11, 6 }
  #GtkOptionMenu::indicator_spacing = { 4, 5, 2, 2 }

  GtkTreeView::expander_size = 14
  GtkExpander::expander_size = 16

  xthickness = 1
  ythickness = 1

  bg[NORMAL]        = "#5f5f61"    #bg of all buttons/menus except selected
  bg[PRELIGHT]      = "#6b6c6e"    #bg of current button/menu selected
  bg[ACTIVE]        = "#808080"    #bg of pressed button/menu item
  bg[SELECTED]      = "#2e55d1"    #bg of active   window title bar
  bg[INSENSITIVE]   = "#5e4d16"    #bg of inactive window title bar

  base[NORMAL]      = "#69696b"    #bg of all list items except selected (also on mouse over)
  base[PRELIGHT]    = "#6d6d6e"    #bg of check/radio buttons on mouse over
  base[ACTIVE]      = "#8a773a"    #bg of inactive list selected item
  base[SELECTED]    = "#0053ab"    #bg of active   list selected item
  base[INSENSITIVE] = "#8a8a8a"    #bg of disabled edit box

  text[NORMAL]      = "#ffffff"    #fg of all explorer items exept the selected
  text[PRELIGHT]    = "#ffffff"    #fg of check/radio buttons on mouse over 
  text[ACTIVE]      = "#ffffff"    #fg of inactive list selected item
  text[SELECTED]    = "#ffffff"    #fg of active list selected item
  text[INSENSITIVE] = "#ffffff"    #fg of disabled edit box (chrome empty bookmark)

  fg[NORMAL]        = "#ffffff"    #fg of all buttons/menus except selected
  fg[PRELIGHT]      = "#ffffff"    #fg of current button/menu selected
  fg[ACTIVE]        = "#ffffff"    #fg of pressed button/menu item
  fg[SELECTED]      = "#ffffff"    #fg of current button/menu selected (firefox)
  fg[INSENSITIVE]   = "#ffffff"    #fg of disabled edit box (inactive window title)

  engine "bluecurve" 
  {
    contrast = 1.0
  }
}

