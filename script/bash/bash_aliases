#git commands
# git unstage(rm) recursive(r) without removing files(cached)
alias gitun="git rm --cached"
alias gitunr="gitun -r"

# X11
alias xwininfo='xwininfo'   #window info

#time-zone commands
alias list_tz='timedatectl list-timezones'
alias my_tz='timedatectl'
alias set_tz_ro='timedatectl set-timezone Europe/Bucharest'
alias set_tz_de='timedatectl set-timezone Europe/Berlin'