alias smartgit=/opt/smartgit/bin/


#subversion
export SVN_EDITOR=emacs # canonical
export SVN_ROOT=https://svn-mihai.googlecode.com/svn # shortcut
alias svn='svn --username $SVN_USER --password $SVN_PASS'
alias svnlu="svn status --no-ignore | grep '^\?' | sed 's/^\? //'"
alias svnru="svn status --no-ignore | grep '^\?' | sed 's/^\? //' | xargs -Ixx rm -rvf xx"


