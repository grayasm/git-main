#
# i3status config
#
# The parameters are specific to i3bar (status bar UI tool).
# i3bar is similar in functionality with dzen2, xmobar, lemonbar.

general {
        colors = true
        interval = 1
        color_good = "#FF00FF"
        color_bad = "#FF00FF"
        color_degraded = "#FF00FF"
        output_format = "i3bar"
}

# https://i3wm.org/i3status/manpage.html
# What do display on the statusbar (i.e order += )

order += "cpu_usage"
order += "disk /"
# order += "disk /mnt/sdb1"
order += "ethernet _first_"
order += "wireless _first_"
order += "tztime local"
order += "battery 0"

cpu_usage {
     format = "cpu:%usage %"
}

disk / {
     prefix_type = "decimal"
     format = "sda1: %free free"
}

disk /mnt/sdb1 {
     prefix_type = "decimal"
     format = "sdb1: %total|%free free"
}

ethernet _first_ {
     format_up = "E: %ip (%speed)"
     format_down = "E: down"
}

wireless _first_ {
     format_up = "W: %quality at %essid, %ip"
     format_down = "W: down"
}

tztime local {
     format = "%Y-%m-%d %H:%M:%S %Z"
     timezone = "Europe/Berlin"
}

battery 0 {
     format = "%status %percentage %remaining"
     format_down = "No battery"
     status_chr = "âš¡ CHR"
     status_bat = "ðŸ”‹ BAT"
     status_unk = "? UNK"
     status_full = "â˜» FULL"
     path = "/sys/class/power_supply/BAT%d/uevent"
     low_threshold = 10
     threshold_type = time
}
